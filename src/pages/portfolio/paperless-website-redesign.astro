                    <video class="with-rds-shadow" autoplay muted loop playsinline>
                        <source src="/vd/PL/PL-desktop-video.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
            <div class="cols-wrap inner-rows-mg fx fx-jb fx-wrap">
                <div class="boxed-col col">
                    <Image src={laptopGraphic} alt="laptop-graphic" />
                </div>
                <div class="boxed-col col">
                    <Image src={starGraphic} alt="star-graphic-with-text" />
                </div>
            </div>
