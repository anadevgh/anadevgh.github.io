    .hero-top{
        align-self: flex-start;
    }
    .hero-wrap{
        padding: 12.5rem 0 3.75rem 0;
        width: 45rem;
        margin: auto;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 100%;
    }
    .hero-anim{
        position: relative;
        text-align: center;
        height: 100%;
    }
    .hero-anim img{
        height: 100%;
        -webkit-transition: all .3s linear;
        -moz-transition: all .3s linear;
        transition: all .3s linear;
    }
    .hero-anim img:last-child{
        position: absolute;
        top: 0;
        left: 0;
