<style>
    .hp-hero{
        height: 100vh;
        min-height: 720px;
    }
    .hero-btn {
        margin-bottom: 80px;
    }
    .hp-hero .container {
        height: 100%;
        padding:0;
        margin: 0;
    }
    .hp-hero:before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: url('../../public/banner-lines.svg') no-repeat;
        background-size: cover;
    }
    .hp-hero:after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 7.5rem;
        background: linear-gradient(180deg, rgba(23, 25, 31, 0.00) 0%, #17191F 100%);
    }
    .hero-top{
        align-self: flex-start;
    }
    .hero-btn {
        z-index: 1;
    }
    .hero-wrap {
        padding: 12.5rem 0 3.75rem 0;
        width: 45rem;
        margin: auto;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 100%;
    }
    .hero-anim{
        position: relative;
        text-align: center;
        height: 100%;
    }
    .hero-anim img{
        object-fit: cover;
        height: 100%;
        -webkit-transition: all .3s linear;
        -moz-transition: all .3s linear;
        transition: all .3s linear;
    }
    .hero-anim img:last-child{
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        margin: auto;
        opacity: 0;
    }
    @media screen and (max-width: 1000px){
        .hero-wrap {
            width: 360px;
            padding-top: 114px;
        }
    }
    @media screen and (min-width:479px) and (max-width:1000px) {
        .hp-hero {
            min-height: 570px;
        }
        .hero-btn {
            margin-bottom: 50px;
        }
    }
    @media screen and (max-width: 479px){
        .hp-hero {
            height: 90vh;
            min-height: 730px;
        }
        .hp-hero:before {
            display:none;
        }
        .hero-wrap {
            width: 100%;
            padding-left: 32px;
            padding-right: 32px;
            padding-top: 120px;
        }
        .hero-btn {
            margin-bottom: 90px;
        }
    }
    @media screen and (max-width: 479px) and (min-height:800px) {
        .hero-wrap {
            padding-top: 150px;
        }
    }
</style>

<script>
    window.addEventListener("scroll", () => {
        const secondImg = document.querySelector(".hero-anim img:last-child");

        if (window.scrollY > 25) { 
            secondImg.style.opacity = "1";
        } else {
            secondImg.style.opacity = "0";
        }
    });
</script>