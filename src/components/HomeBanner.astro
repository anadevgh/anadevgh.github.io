<script>
    window.addEventListener("scroll", () => {
        const secondImg = document.querySelector(".hero-anim img:last-child");

        if (window.scrollY > 25) { 
            secondImg.style.opacity = "1";
        } else {
            secondImg.style.opacity = "0";
        }
    });
</script>