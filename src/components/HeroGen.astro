---
import { Image } from 'astro:assets';
const { img, title, text, secText, buttonText } = Astro.props;

---

<section class="sc-hero sc-al-cnt">
    <div class="container">
        <div class="sc-hr-wrap fx fx-wrap">
            <div class="hero-graphic">
                <Image src={img} alt={title} />
            </div>
            <div class="hero-intro-text">
                <h1 set:html={title}></h1>
                {secText && (
                    <p class="secondary-text">{secText}</p>
                )}
                <div class="sc-txt">
                    <p set:html={text}></p>
                </div>
                {secText && (
                    <div class="sc-subtext">
                        <p set:html={secText}></p>
                    </div>
                )}
                {buttonText && (
                    <div class="hero-btn-row fx fx-jc">
                         <a class="btn-primary btn-primary-lg fx fx-ac fx-jc">
                            <span>{buttonText}</span>
                        </a>
                    </div>
                )}
            </div>
        </div>
    </div>
</section>

<style is:global>
    .hero-btn-row{
        margin-top: 2.25rem;
    }
    .sc-hr-wrap{
        width: 45rem;
        margin: auto;
    }
    .hero-graphic{
        margin: 2rem auto 3.75rem auto;
    }
    .sc-hero{
        padding-bottom: 9.375rem;
    }
    .sc-subtext{
        margin-top: 1.5rem;
    }
    html.light .sc-subtext p{
        color: rgba(163, 165, 172, 0.50);
        text-align: center;
        font-size: 1rem;
        font-weight: 500;
        line-height: 1.25rem;
        letter-spacing: 0.02rem;
        margin: 0;
    }
</style>