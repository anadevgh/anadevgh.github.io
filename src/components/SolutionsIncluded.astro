---
const { title, items } = Astro.props;
import { Image } from 'astro:assets';

---

<section class="sl-inc sc-al-cnt sc-pd ps-rel">
    <div class="container">
        <div class="sc-wrapper">
            <div class="sc-headline ps-rel">
                <h2 set:html={title}></h2>
            </div>
        </div>
        <div class="sl-inc-items fx fx-jb">
            {items.map((item: { title: string; graphic: string; points: any[] }) => (
                <div class="sl-inc-col fx fx-wrap">
                    <div class="sl-inc-col-wrap">
                        <div class="sl-inc-graphic fwidth">
                            <Image src={item.graphic} alt={item.title} />
                        </div>
                        <h2>{item.title}</h2>
                        <div class="sl-inc-points fx fx-wrap">
                            {item.points.map((point: { title: string; }) => (
                                <div class="sl-inc-point fx fx-as fwidth">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                        <path d="M12.3623 4.36462L19.998 12.0004L12.3623 19.6361" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M2 12.0004H19" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    <span set:html={point.title}></span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .sl-inc-items {
        margin-top: 3.75rem;
    }
    .sl-inc-col{
        border-radius: 1.25rem;
        background: #252831;
        padding: 3.75rem 2.5rem;
        width: calc((100% - 2*1.5rem)/3);
    }
    .sl-inc-graphic{
        text-align: center;
    }
    .sl-inc-graphic img{
        width: 5rem;
        height: auto;
        margin: auto;
    }
    .sl-inc-col h2{
        font-size: 2.5rem;
        line-height: 2.5rem;
        margin: 2.5rem 0;
        text-align: center;
        width: 100%;
    }
    .sl-inc-points{
        gap: 0.75rem;
    }
    .sl-inc-point{
        border-radius: 0.5rem;
        background: #363942;
        padding: 1.25rem 0.75rem;
    }
    .sl-inc-point span{
        color: var(--white);
        font-size: 1.25rem;
        font-weight: 500;
        line-height: 1.5rem;
        letter-spacing: 0.013rem;
        padding-left: 0.5rem;
    }
    .sl-inc-point svg{
        width: 1.5rem;
        height: 1.5rem;
    }
</style>