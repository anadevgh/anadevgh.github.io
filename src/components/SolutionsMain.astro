---

<HeroGen 
    img={HeroData.img}
    title={HeroData.heading}
    text={HeroData.description}
    buttonText={HeroData.buttonText}
/>
<SolutionsChallenges 
    title={ChlallengesData.heading}
    text={ChlallengesData.description}
    items={ChlallengesData.items}
/>
<Formula
    title={formulaData.heading}
    text={formulaData.description}
    items={formulaData.items}
    notDNA="yes"
/>
<SolutionsAdvantages 
    title={AdvantagesData.heading}
