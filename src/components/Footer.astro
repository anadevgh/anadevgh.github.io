                                                <circle cx="80" cy="80" r="50" fill="#E20000" fill-opacity="0.14"/>
                                                <circle cx="80" cy="80" r="50" fill="#E20000" fill-opacity="0.2"/>
                                                <circle cx="80" cy="80" r="50" fill="#E20000"/>
