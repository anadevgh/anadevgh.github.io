<script is:inline>
    const btn = document.getElementById('scroll-to-quiz');
    const header = document.querySelector('header'); // adjust if your header has a different selector

    if (btn) {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            const target = document.getElementById('quiz-form');
            if (target) {
                const headerHeight = header ? header.offsetHeight : 0;
                const targetPosition = target.getBoundingClientRect().top + window.scrollY - headerHeight;

                window.scrollTo({ top: targetPosition, behavior: 'smooth' });
            }
        });
    }

    const MAX_COLS = 4;
    const stepsData = [
        { columns: 4, headline: "Where is your business today?", items: [
            { title: "Startup", subtitle: "Just getting started" },
            { title: "Growth", subtitle: "Scaling in your market" },
            { title: "Expansion", subtitle: "Entering new markets" },
            { title: "Established", subtitle: "Strengthening your position" },
        ]},
        { columns: 3, headline: "What's your priority right now?", items: [
            { title: "Branding & Identity" },
            { title: "Website / Digital presence" },
            { title: "Full digital solution" },
        ]},
        { columns: 4, headline: "When are you looking to take action?", items: [
            { title: "Immediately" },
            { title: "Within 3 months" },
            { title: "Within 6 months" },
            { title: "Just exploring" }
        ]},
        { columns: 4, headline: "What's the biggest obstacle you're facing?", items: [
            { title: "Blending in with competition" },
            { title: "Website not converting" },
            { title: "Systems blocking growth" },
            { title: "Can't rely on current agency" }
        ]},
        { columns: 3, headline: "What level of investment are you ready to make?", items: [
            { title: "€10k - €25k" },
            { title: "€25k - €50k" },
            { title: "€50k+" }
        ]}
    ];

    const row = document.getElementById('gts-row');
    const headline = document.getElementById('gts-headline');
    const lastStep = document.getElementById('gts-last-step');
    const progressStepTxt = document.querySelector(".fm-progress-txt p span:nth-child(2)");
    const progressBar = document.querySelector(".fm-progress-bar-spin");
    const prevBtn = document.querySelector(".gs-prev-step");
    const pgBarMain = document.querySelector(".gs-form-progress-bar");

    let step = 0;
    let answers = [];

    for (let i = 0; i < MAX_COLS; i++) {
        const col = document.createElement('div');
        col.className = 'gts-form-col';
        if(row){
            row.appendChild(col);
        }
    }

    function animateWidths(columns) {
        const cols = [...row.children];

        cols.forEach(col => {
            col.style.width = col.getBoundingClientRect().width + 'px';
            col.style.transition = 'width .5s cubic-bezier(.4,0,.2,1)';
        });

        row.offsetHeight;

        const width = 100 / columns + '%';
        cols.forEach(col => {
            col.style.width = width;
        });

        setTimeout(() => {
            cols.forEach(col => {
                col.style.transition = '';
                col.style.width = '';
            });
        }, 500);
    }

    function playBoxVideo(col) {
        document.querySelectorAll(".sc-anim").forEach(a => {
            a.classList.remove("active");
            a.style.pointerEvents = "none";
        });

        document.querySelectorAll(".bg-video").forEach(v => {
            v.pause();
            v.currentTime = 0;
        });

        const anim = col.querySelector(".sc-anim");
        const video = col.querySelector(".bg-video");

        if (!anim || !video) return;

        anim.classList.add("active");
        anim.style.pointerEvents = "auto";
        video.play();
    }

    function renderStep() {
        const data = stepsData[step];

        headline.style.opacity = 0;
        setTimeout(() => {
            headline.textContent = data.headline;
            headline.style.opacity = 1;
        }, 150);

        progressStepTxt.textContent = step + 1;
        progressBar.style.width = `${((step + 1) / stepsData.length) * 100}%`;

        prevBtn.classList.toggle("hidden", step === 0);

        row.classList.remove('threecol','fourcol');
        row.classList.add(data.columns === 3 ? 'threecol' : 'fourcol');

        animateWidths(data.columns);

        [...row.children].forEach((col, i) => {
            if (i < data.items.length) {
                const item = data.items[i];
                col.style.display = 'block';
                col.innerHTML = `
                    <div class="gts-form-col-wrap fx fx-wrap fx-ae">
                        <div class="gts-form-headline fwidth">
                            <h3>${item.title}</h3>
                            ${item.subtitle ? `<h5>${item.subtitle}</h5>` : ''}
                        </div>
                        <div class="gts-form-num fwidth">
                            <span>${String(i+1).padStart(2,'0')}</span>
                        </div>
                    </div>
                    <div class="sc-anim" style="opacity:0;pointer-events:none;">
                        <video muted playsinline loop class="bg-video">
                            <source src="/vd/success-anim.mp4" type="video/mp4">
                        </video>
                    </div>
                `;

                let stepTimeout;

                col.onclick = () => {
                    answers[step] = item.title;
                    step++;
                    if (step < stepsData.length) {
                        col.classList.add("click-animate");
                        col.addEventListener('animationend', () => {
                            col.classList.remove("click-animate");
                        }, { once: true });

                        playBoxVideo(col);
                        stepTimeout = setTimeout(() => {
                            clearTimeout(stepTimeout);
                            renderStep();
                        }, 1500);
                    } else {

                        col.classList.add("click-animate");
                        col.addEventListener('animationend', () => {
                            col.classList.remove("click-animate");
                        }, { once: true });

                        playBoxVideo(col);
                        stepTimeout = setTimeout(() => {
                            clearTimeout(stepTimeout);
                            row.style.display = 'none';
                            headline.style.display = 'none';
                            pgBarMain.style.display = 'none';
                            lastStep.style.display = 'block';
                            requestAnimationFrame(() => lastStep.style.opacity = 1);
                        }, 1400);
                    }
                };
            } else {
                col.style.display = 'none';
            }
        });
    }

    if(prevBtn){
        prevBtn.onclick = () => {
            if (step === 0) return;
            step--;
            renderStep();
        };
    }

    if(row){
        renderStep();
    }

    const form = document.getElementById('ct-form');

    if(form){
        const fields = form.querySelectorAll('input, textarea');
        const submitBtn = form.querySelector('button[type="submit"]');
        const statusBox = document.querySelector('.form-status-box');
        const statusSuccessBox = document.querySelector('.form-success-status');
        const statusErrorBox = document.querySelector('.form-error-status');

        fields.forEach(field => {
            field.addEventListener('input', () => {
                validateField(field);
                toggleSubmit();
            });

            field.addEventListener('blur', () => {
                validateField(field);
            });
        });

        form.addEventListener('submit', async e => {
            e.preventDefault();

            fields.forEach(validateField);
            if (!form.checkValidity()) return;

            submitBtn.disabled = true;
            submitBtn.textContent = 'Sending...';

            // Submit logic
            const formData = Object.fromEntries(new FormData(form));
            const payload = {
                ...formData,
                answers
            };

            /*console.log(answers);
            console.log(formData);*/

            try {
                const res = await fetch('/api/contact', {
                    method:'POST',
                    headers:{ 'Content-Type':'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await res.json();

                statusBox.classList.add('revealed');
                if(result.success){
                    statusErrorBox.classList.remove('revealed');
                    statusSuccessBox.classList.add('revealed');
                    submitBtn.textContent = 'Send';
                    form.reset();
                    fields.forEach(f=>{f.classList.remove('is-success')});
                    setTimeout(()=>toggleSubmit(), 10);
                } else {
                    statusSuccessBox.classList.remove('revealed');
                    statusErrorBox.classList.add('revealed');
                    submitBtn.textContent = 'Send';
                    //alert(result.error || 'Something went wrong');
                }
            } catch(err){
                console.error(err);
                console.error('Network error');
                submitBtn.textContent = 'Send';
                statusSuccessBox.classList.remove('revealed');
                statusErrorBox.classList.add('revealed');
                //alert('Network error');
            }
        });
    }

    function isValidEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email.trim());
    }

    function toggleSubmit() {
        submitBtn.disabled = !form.checkValidity();
    }

    //subscribe form
    const subscribeForm = document.getElementById('subscribe-form');
    if(subscribeForm){
        const subscribeFields = subscribeForm.querySelectorAll('input');
        const subscribeSubmitBtn = subscribeForm.querySelector('button[type="submit"]');
        const sbErrorEl = subscribeForm.querySelector('.ft-sb-msg');
        const sbErrorText = subscribeForm.querySelector('.sb-status-text');

        function toggleSbSubmit() {
            subscribeSubmitBtn.disabled = !subscribeForm.checkValidity();
        }

        subscribeFields.forEach(field => {
            field.addEventListener('input', () => {
                validateField(field);
                toggleSbSubmit();
                
                subscribeForm.classList.remove('has-errors');
                if (sbErrorEl) sbErrorEl.style.display = 'none';
                if (sbErrorText) sbErrorText.textContent = '';
                sbErrorEl.classList.remove('has-errors');
            });

            field.addEventListener('blur', () => {
                validateField(field);

                subscribeForm.classList.remove('has-errors');
                if (sbErrorEl) sbErrorEl.style.display = 'none';
                if (sbErrorText) sbErrorText.textContent = '';
                sbErrorEl.classList.remove('has-errors');
            });
        });

        subscribeForm.addEventListener('submit', async e => {
            e.preventDefault();

            subscribeFields.forEach(validateField);
            if (!subscribeForm.checkValidity()) return;

            subscribeSubmitBtn.disabled = true;
            subscribeSubmitBtn.textContent = 'Processing...';

            const formData = Object.fromEntries(new FormData(subscribeForm));

            try {
                const res = await fetch('/api/subscribe', {
                    method:'POST',
                    headers:{ 'Content-Type':'application/json' },
                    body: JSON.stringify(formData)
                });

                const result = await res.json();
                if(result.success){
                    subscribeSubmitBtn.textContent = 'Subscribed';
                    sbErrorEl.classList.add('show-icon');

                    if(result.message){
                        if (sbErrorText) sbErrorText.textContent = result.message;
                        if (sbErrorEl) sbErrorEl.style.display = 'block';
                    }
                    
                    subscribeSubmitBtn.classList.add('succeeded');

                    setTimeout(() => {
                        subscribeSubmitBtn.textContent = 'Subscribe';
                        subscribeForm.reset();
                        subscribeFields.forEach(f=>{f.classList.remove('is-success')});
                        subscribeSubmitBtn.classList.remove('succeeded');
                        if (sbErrorText) sbErrorText.textContent = '';
                        if (sbErrorEl) sbErrorEl.style.display = 'none';
                        toggleSbSubmit();
                    }, 3000);
                } else {
                    subscribeForm.classList.add('has-errors');
                    subscribeSubmitBtn.disabled = false;
                    subscribeSubmitBtn.textContent = 'Subscribe';
                    if (sbErrorText) sbErrorText.textContent = result.message;
                    if (sbErrorEl) sbErrorEl.style.display = 'block';
                    sbErrorEl.classList.add('has-errors');
                }
            } catch(err){
                console.error(err);
                console.error('Network error');
                subscribeSubmitBtn.textContent = 'Subscribe';
                if (sbErrorText) sbErrorText.textContent = 'Something went wrong. Please try again.';
                if (sbErrorEl) sbErrorEl.style.display = 'block';
                sbErrorEl.classList.add('has-errors');
                subscribeForm.classList.add('has-errors');
            }
        });
    }

    function validateField(field) {
        const errorEl = field.closest('.field')?.querySelector('.error');
        const errorContainer = errorEl?.closest('.err-msg');
        const value = field.value.trim();

        // Optional + empty → ignore
        if (!field.required && value === '') {
            field.classList.remove('is-error', 'is-success');
            if (errorEl) errorEl.textContent = '';
            if (errorContainer) errorContainer.style.display = 'none';
            field.setCustomValidity('');
            return;
        }

        // Required + whitespace only
        if (field.required && value === '') {
            field.classList.add('is-error');
            field.classList.remove('is-success');
            if (errorEl) errorEl.textContent = 'This field is required';
            if (errorContainer) errorContainer.style.display = 'block';
            field.setCustomValidity('This field is required');
            return;
        }

        // **Email custom validation**
        if (field.type === 'email' && !isValidEmail(value)) {
            field.classList.add('is-error');
            field.classList.remove('is-success');
            if (errorEl) errorEl.textContent = "Invalid email: only letters, numbers, '@', and '.' allowed";
            if (errorContainer) errorContainer.style.display = 'block';
            field.setCustomValidity('Invalid email');
            return;
        }

        // Everything else is valid
        field.classList.remove('is-error');
        field.classList.add('is-success');
        if (errorEl) errorEl.textContent = '';
        if (errorContainer) errorContainer.style.display = 'none';
        field.setCustomValidity('');
    }
</script>
