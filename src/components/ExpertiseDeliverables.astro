---
const { heading, description, items } = Astro.props;
---

<section class="exp-br-prc sc-al-cnt sc-pd ps-rel">
    <div class="container">
        <div class="sc-wrapper">
            <div class="sc-headline ps-rel">
                <h2>{heading}</h2>
                <div class="sc-txt">
                    <p>{description}</p>
                </div>
            </div>
        </div>
        <div class="exp-dv-wrap">
            <div class="exp-dv-container">
                <div class="exp-dv-list fx fx-wrap fx-jc">
                    {items.map((item: { title: string; }) => (
                        <div class="exp-dv-item fx fx-wrap">
                            <div class="exp-dv-item-wrap fx fx-ac">
                                <div class="exp-dv-icon">
                                    <img src="/file-icon.svg" alt="file icon" />
                                </div>
                                <h3>{item.title}</h3>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .exp-dv-container{
        width: 66.5rem;
        margin: auto;
    }
    .exp-dv-list{
        gap: 1.5rem;
        margin-top: 2.5rem;
    }
    .exp-dv-item{
        border-radius: 1.25rem;
        background: #252831;
        padding: 0 2rem;
        height: 6.625rem;
        width: calc((100% - 1.5rem) / 2);
    }
    .exp-dv-icon{
        margin-right: 1.5rem;
    }
    .exp-dv-icon img{
        width: auto;
        height: 5.125rem;
    }
    @media screen and (max-width: 1000px) {
        .exp-dv-list {
            gap: 12px;
            margin-top: 24px;
        }
        .exp-dv-container {
            width: 100%;
        }
        .exp-dv-item {
            border-radius: 8px;
            padding: 8px 12px;
            height: auto;
            width: calc((100% - 12px) / 2);
        }
        .exp-dv-icon {
            margin-right: 12px;
            flex-shrink: 0;
        }
        .exp-dv-icon img {
            width: 30px;
            height: auto;
        }
        .exp-dv-item h3 {
            font-size: 12px;
            line-height: 16px;
        }



    }
    @media screen and (max-width: 479px) {
        .exp-dv-item {
            width: 100%;
        }
        .exp-dv-item h3 {
            font-size: 16px;
            line-height: 20px;
        }
    }
</style>